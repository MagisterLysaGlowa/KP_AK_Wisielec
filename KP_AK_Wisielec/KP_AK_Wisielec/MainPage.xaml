<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KP_AK_Wisielec.MainPage">

    <StackLayout Padding="10" VerticalOptions="Center">
        <Label
            Margin="0,0,0,30"
            FontAttributes="Bold"
            FontSize="30"
            HorizontalTextAlignment="Center"
            Text="Wybierz kategorie"/>
        <Picker x:Name="picker_category" Margin="0,0,0,30"/>
        <Button
            Background="green"
            FontAttributes="Bold"
            CornerRadius="10"
            TextColor="White"
            Text="Zagraj"
            Clicked="GameStart_Clicked"
            WidthRequest="200"/>
    </StackLayout>

</ContentPage>
